{
  "name": "bash-util-lib",
  "description": "Bash Utility Library",
  "global": false,
  "install": "make install",
  "scripts": [
    "./src/bash-util-lib.sh",
    "./src/bash-util-lib.ansi.const.sh",
    "./src/bash-util-lib.ansi.sh",
    "./src/bash-util-lib.file.sh",
    "./src/bash-util-lib.script.sh",
    "./src/bash-util-lib.string.sh"
  ],
  "commands": {
    "docker-build":         "docker-compose build",
    "shell":                "docker-compose run --rm -it shell",
    "execute":              "docker-compose run --rm -it execute $@",
    "unit-tests":           "docker-compose run --rm -it execute unit-tests $@",
    "coverage":             "docker-compose run --rm -it execute coverage $@",
    "shellchecks":          "docker-compose run --rm -it execute shellchecks",
    "coverage-permissions": "sudo chown -R --reference=./coverage ./coverage"
  }
}
